<?xml version="1.0" encoding="UTF-8" ?>
    	<widget xmlns   = "http://www.w3.org/ns/widgets"
		xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "es.juntadeandalucia.mapea4.planromero16"
		versionCode = "100" 
		version     = "1.0.0" >

	<name>Plan Romero 2016</name>
	<description>
		Plan Romero 2016
	</description>
	<author email="l-dirsigc.chap@juntadeandalucia.es" href="http://www.juntadeandalucia.es">
		Junta de Andaluc√≠a
	</author>
	<content src="index.html" />
	<access origin="*" />
	<icon src="resources/icon.png" /><!--Adaptar a resoluciones?-->

	<preference name="SplashScreen" value="screen" />
	<preference name="ShowSplashScreenSpinner" value="false"/>
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="FadeSplashScreen" value="false"/>
	<preference name="DisallowOverscroll" value="true" />
	<preference name="SuppressesLongPressGesture" value="true" />
	<preference name="android-installLocation" value="auto" />	
	<preference name="phonegap-version" value="cli-5.2.0" />

<!-- PERMISOS -->	
	<preference name="permissions" value="none"/>	
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>

<!-- SPLASH Android -->
	<splash src="resources/Android/screen.png" /> <!--DEFAULT-->
	<splash src="resources/Android/screen.png" platform="android" qualifier="port-ldpi" />
	<splash src="resources/Android/screen.png" platform="android" qualifier="port-mdpi" />
	<splash src="resources/Android/screen.png" platform="android" qualifier="port-hdpi" />
	<splash src="resources/Android/screen.png" platform="android" qualifier="port-xhdpi" />
	<splash src="resources/Android/screen_land.png" platform="android" qualifier="land-ldpi" />
	<splash src="resources/Android/screen_land.png" platform="android" qualifier="land-mdpi" />
	<splash src="resources/Android/screen_land.png" platform="android" qualifier="land-hdpi" />
	<splash src="resources/Android/screen_land.png" platform="android" qualifier="land-xhdpi" />
<!-- SPLASH iOS -->
	<!-- iPhone and iPod touch -->
	<splash src="resources/iOS/screen.png" platform="ios" width="320" height="480" />
	<splash src="resources/iOS/screen.png" platform="ios" width="640" height="960" />
	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<splash src="resources/iOS/screen.png" platform="ios" width="640" height="1136" />
	<!-- iPhone 6 -->
	<splash src="resources/iOS/screen.png" platform="ios" width="750" height="1334" />
	<splash src="resources/iOS/screen.png" platform="ios" width="1242" height="2208" />
	<splash src="resources/iOS/screen_land.png" platform="ios" width="2208" height="1242" />
	<!-- iPad -->
	<splash src="resources/iOS/screen.png" platform="ios" width="768" height="1024" />
	<splash src="resources/iOS/screen_land.png" platform="ios" width="1024" height="768" />
	<!-- Retina iPad -->
	<splash src="resources/iOS/screen.png" platform="ios" width="1536" height="2048" />
	<splash src="resources/iOS/screen_land.png" platform="ios" width="2048" height="1536" />

<!-- PLUGINS -->
	<plugin name="cordova-plugin-geolocation" source="npm" version="2.1.0" />
	<plugin name="cordova-plugin-inappbrowser" source="npm" version="1.3.0" />
	<plugin name="cordova-plugin-splashscreen" source="npm" version="3.2.1" />
	<plugin name="cordova-plugin-statusbar" source="npm" version="2.1.2" />
	<plugin name="cordova-plugin-whitelist" source="npm" version="1.2.1" />
	
<!-- CONFIGS -->	
	<gap:config-file platform="ios" parent="UIStatusBarHidden">
	    <true/>
	</gap:config-file>
	
	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
	    <false/>
	</gap:config-file>

</widget>
